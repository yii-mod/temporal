{
    "name": "yii-mod/temporal",
    "type": "library",
    "description": "Yii wrapper for temporal.io",
    "keywords": [
        "yii",
        "temporal"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yii-mod/temporal/issues?state=open",
        "source": "https://github.com/yii-mod/temporal"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.9",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "Yiimod\\Temporal\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiimod\\Temporal\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
